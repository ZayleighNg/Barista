[core]
    excludesFile = /home/ZayleighNg/.gitgnore

[color]
    ui = auto

[push]
    default = current

[pull]
    rebase = true

[fetch]
    prune = true

[rebase]
    autostash = true

[user]
    name = ZayleighNg

[alias]
    oops = commit --amend --no-edit
    reword = commit --amend
    uncommit = reset --soft HEAD~1

[url "git@github.com:"]
    insteadOf = https://github.com/

[includeIf "gitdir:/home/ZayleighNg/github/**"]
    path = /home/ZayleighNg/.github.gitconfig

[url "git@gitlab.com:"]
    insteadOf = https://gitlab.com/

[includeIf "gitdir:/home/ZayleighNg/gitlab/**"]
    path = /home/ZayleighNg/.gitlab.gitconfig
